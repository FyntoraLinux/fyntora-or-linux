#!/bin/bash
# Post-installation script for FyntoraLinux

echo "Running FyntoraLinux post-installation..."

# Enable services
systemctl enable fyntora-welcome.service
systemctl enable fyntora-update-manager.service

# Set default theme (may fail if no display)
gsettings set org.gnome.desktop.interface gtk-theme 'FyntoraLinux' 2>/dev/null || true
gsettings set org.gnome.shell.extensions.user-theme name 'FyntoraLinux' 2>/dev/null || true

# Configure default applications
gsettings set org.gnome.desktop.default-applications.terminal exec 'gnome-terminal' 2>/dev/null || true
gsettings set org.gnome.desktop.background picture-uri 'file:///usr/share/backgrounds/fyntora/default.jpg' 2>/dev/null || true

echo "Post-installation completed"